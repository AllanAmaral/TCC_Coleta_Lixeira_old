<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/tcc?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">allan</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.query.factory_class">org.hibernate.hql.internal.classic.ClassicQueryTranslatorFactory</property>
    <mapping/>
    <mapping class="Business.Objects.Caminhao" file="" jar="" package="Business.Objects" resource="META-INF/Caminhao.hbm.xml"/>
    <mapping class="Business.Objects.CaminhaoMotorista" file="" jar="" package="Business.Objects" resource="Business/Objects/CaminhaoMotorista.hbm.xml"/>
    <mapping class="Business.Objects.HistoricoColeta" file="" jar="" package="Business.Objects" resource="Business/Objects/HistoricoColeta.hbm.xml"/>
    <mapping class="Business.Objects.Lixeira" file="" jar="" package="Business.Objects" resource="Business/Objects/Lixeira.hbm.xml"/>
    <mapping class="Business.Objects.Motorista" file="" jar="" package="Business.Objects" resource="Business/Objects/Motorista.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
